{
    "type": "project",
    "require": {
        "php": ">=7.4",
        "api-platform/core": "^2.6",
        "symfony/framework-bundle": "5.3.*",
        "symfony/yaml": "5.3.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox tests",
        "phpstan": "phpstan analyse --no-progress",
        "rector": "rector process"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.4.2",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.12",
        "symfony/browser-kit": "5.3.*",
        "symfony/http-client": "5.3.*"
    }
}
